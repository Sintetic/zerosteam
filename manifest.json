{
    "manifest_version": 2,

    "name": "ZeroSteam",
    "version": "0.0.5",

    "icons": {
        "16": "16x16.png",
        "32": "32x32.png",
        "48": "48x48.png",
        "128": "128x128.png"
    },

    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

    "content_scripts": [
        {
            "matches": [ "http://steamcommunity.com/id/*/badges/" ],
            "js": [ "jquery.js", "content_badges_inspect.js" ],
            "run_at": "document_end"
        }       ,
        {
            "matches": [ "http://steamcommunity.com/app/*/guides*" ],
            "js": [ "jquery.js", "content_guides_inspect.js" ],
            "run_at": "document_end"
        }


    ],

    "web_accessible_resources": [
        "/content_badges.js", "/content_guides.js"
    ],

    "permissions": [
        "background",
        "http://store.steampowered.com/*",
        "http://steamcommunity.com/id/*"
    ],

    "browser_action": {
        "default_title": "Открыть уведомления",
        "default_icon": "48x48.png",
        "default_popup": "popup.html"
    },

    "options_page": "options.html",

    "background": {
        "page": "background.html"
    }

}