{
    "name": "ZeroSteam",
    "manifest_version": 2,
    "version": "0.0.7.2",

    "homepage_url": "http://sintetic.github.io/zerosteam/",

    "icons": {
        "16": "16x16.png",
        "32": "32x32.png",
        "48": "48x48.png",
        "128": "128x128.png"
    },

    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

    "content_scripts": [
        {
            "matches": [ "http://steamcommunity.com/id/*/badges/*" ],
            "js": ["/js/engine/InceptionEngine.js", "js/content/content_badges_inception.js" ],
            "run_at": "document_end"
        },
        {
            "matches": [ "http://steamcommunity.com/app/*/guides*" ],
            "js": ["/js/engine/InceptionEngine.js", "js/content/content_guides_inception.js" ],
            "run_at": "document_end"
        },
        {
            "matches": [ "https://store.steampowered.com/account/" ],
            "js": ["/js/engine/InceptionEngine.js", "js/content/content_prices_inception.js" ],
            "run_at": "document_end"
        },
        {
            "matches": [ "http://store.steampowered.com/" ],
            "js": ["/js/engine/InceptionEngine.js", "js/content/content_store_main_page_inception.js" ],
            "run_at": "document_end"
        }


    ],

    "web_accessible_resources": [
        "js/content/content_badges.js", "js/content/content_guides.js", "js/content/content_get_steam_prices.js", "js/content/content_store_main_page.js" , "img/vk_14x14.png"
    ],

    "permissions": [
        "tabs",
        "background",
        "storage",
        "http://store.steampowered.com/*",
        "http://steamcommunity.com/id/*"
    ],

    "browser_action": {
        "default_title": "Открыть уведомления",
        "default_icon": "48x48.png",
        "default_popup": "popup.html"
    },

    "options_page": "options.html",

    "background": {
        "page": "background.html"
    }

}